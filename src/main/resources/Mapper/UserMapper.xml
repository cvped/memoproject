<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.cvped.memo.user.repository.UserRepository">
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO
 			`user`
 		(
 			`loginI`
 			,`password`
 			,`name`
 			,`email`
 		)	
 		VALUE
 		(
 		#{loginId}
 		#{password}
 		#{name}
 		#{email}
 		)
 	
 	</insert>
 
 	<select id="selectUser" parameterType="map"
 	resultType="com.cvped.memo.domain.User">
 			SELECT
 		(
 			`id`
 			`loginI`
 			,`password`
 			,`name`
 			,`email`
 			,`createdAt`
 			,`updatedAt`
 			FROM
 				`user`
 			WHERE
 				`loginId` = #{loginId}
 			AND `password` = #{password}
 		)	
 	
 	
 	</select>
 
 </mapper>